					<p>{t('services.consulting.description')}</p>
				</div>
			</div>
		</section>

		<section id="portfolio" class="portfolio">
			<h2>{t('portfolioTitle')}</h2>
			<div class="portfolio-grid">
				<div class="portfolio-item">
					<Image
						src="/images/logo.svg"
						width="400"
						height="200"
						alt={locale === 'es' ? 'Proyecto 1' : 'Project 1'}
						loading="lazy"
					/>
					<div class="portfolio-content">
						<h3>{t('portfolioItems.item1.title')}</h3>
						<p>{t('portfolioItems.item1.description')}</p>
					</div>
				</div>
				<div class="portfolio-item">
					<Image
						src="/images/logo.svg"
						width="400"
						height="200"
						alt={locale === 'es' ? 'Proyecto 2' : 'Project 2'}
						loading="lazy"
					/>
					<div class="portfolio-content">
						<h3>{t('portfolioItems.item2.title')}</h3>
						<p>{t('portfolioItems.item2.description')}</p>
					</div>
				</div>
				<div class="portfolio-item">
					<Image
						src="/images/logo.svg"
						width="400"
						height="200"
						alt={locale === 'es' ? 'Proyecto 3' : 'Project 3'}
						loading="lazy"
					/>
					<div class="portfolio-content">
						<h3>{t('portfolioItems.item3.title')}</h3>
						<p>{t('portfolioItems.item3.description')}</p>
					</div>
				</div>
			</div>
		</section>

		<section id="contact" class="contact">
			<h2>{t('contactTitle')}</h2>
			<div class="contact-content">
				<div class="contact-form">
					<h3>{t('contactFormTitle')}</h3>
					<form>
						<div class="form-group">
							<label for="name">{t('contactName')}</label>
							<input type="text" id="name" name="name" required>
						</div>
						<div class="form-group">
							<label for="email">{t('contactEmail')}</label>
							<input type="email" id="email" name="email" required>
						</div>
						<div class="form-group">
							<label for="message">{t('contactMessage')}</label>
							<textarea id="message" name="message" required></textarea>
						</div>
						<button type="submit" class="submit-btn">{t('contactSubmit')}</button>
					</form>
				</div>
				<div class="contact-info">
					<h3>{t('contactInfoTitle')}</h3>
					<p><strong>Email:</strong> info@aniwa.com</p>
					<p><strong>{t('contactPhone')}</strong></p>
					<p><strong>{t('contactLocation')}</strong></p>
					<p><strong>{t('contactHours')}</strong></p>
				</div>
			</div>
		</section>

</MainLayout>
